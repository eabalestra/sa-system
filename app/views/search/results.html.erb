<div class="main-content">
  <div class="page-content">
    <% if @products.present? %>
      <h3> Productos </h3>
      <div class="card shadow mb-4">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered d-none d-lg-table" id="tabla-productos" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Código</th>
                  <th>Nombre producto</th>
                  <th>Existencia</th>
                  <th>PU Venta</th>
                  <th>PU Compra</th>
                  <th>Margen de Ganancia</th>
                  <th>IVA (%)</th>
                  <th>Proveedor</th>
                  <th>Últ. Actualización Precio</th>
                  <th>Últ. Actualización Stock</th>
                </tr>
              </thead>
              <tbody>
                <% @products.each do |prod| %>
                  <tr id="producto_<%= prod.id %>" >
                    <td><%= prod.cod %></td>
                    <td><%= prod.name %></td>
                    <td><%= prod.existence %></td>
                    <td>$<%= prod.selling_unit_price %></td>
                    <td>$<%= prod.unit_cost %></td>
                    <td><%= prod.profit_margin * 100 %>%</td>
                    <td><%= prod.iva_amount * 100 %>%</td>
                    <td><%= prod.supplier != nil ? prod.supplier.name : "No tiene proveedor" %></td>
                    <td><%= prod.last_price_update_date %></td>
                    <td><%= prod.last_stock_update_date %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <table class="table table-bordered d-lg-none w-100" id="tabla-productos-mobile" width="70%" cellspacing="0" style="padding:0.5em;font-size:0.8em;">
              <thead>
                <tr>
                  <th>Cód</th>
                  <th>Nombre producto</th>
                  <th>Exist.</th>
                  <th>PU Venta</th>
                  <th>PU Compra</th>
                </tr>
              </thead>
              <tbody>
                <% @products.each do |prod| %>
                  <tr id="producto_<%= prod.id %>" >
                    <td><%= prod.cod %></td>
                    <td><%= prod.name %></td>
                    <td><%= prod.existence %></td>
                    <td>$<%= prod.selling_unit_price %></td>
                    <td>$<%= prod.unit_cost %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
    <% if @clients.present? %>
      <h3> Clientes </h3>
      <div class="card shadow mb-4">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="tablaClientes" style="width: 100%">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Dirección</th>
                  <th>Teléfono</th>
                </tr>
              </thead>
              <tbody>
                <% @clients.each do |clie| %>
                  <tr id="cliente_<%= clie.id %>">
                    <td><%= clie.name %></td>
                    <td><%= clie.dir %></td>
                    <td><%= clie.phone %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
    <% if @suppliers.present? %>
      <h3> Proveedores </h3>
      <div class="card shadow mb-4">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="tablaProveedores" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Dirección</th>
                  <th>Teléfono</th>
                </tr>
              </thead>
              <tbody>
                <% @suppliers.each do |prov| %>
                  <tr id="proveedor_<%= prov.id %>" >
                    <td><%= prov.name %></td>
                    <td><%= prov.dir %></td>
                    <td><%= prov.phone %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>