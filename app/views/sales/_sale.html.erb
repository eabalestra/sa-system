<form>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="id">ID</label>
      <input type="text" class="form-control" value="<%= @sale.id %>" disabled>
    </div>
    <div class="form-group col-md-6">
      <label for="fecha">Fecha</label>
      <input type="text" class="form-control" value="<%= @sale.created_at.strftime("%d-%m-%Y") %>" disabled>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="id">Monto de venta</label>
      <input type="text" class="form-control" value="<%= @sale.total_amount %>" disabled>
    </div>
    <div class="form-group col-md-6">
      <label for="vendedor">Vendedor</label>
      <input type="text" class="form-control" value="<%= @sale.user.email %>" disabled>
    </div>
  </div>
</form>
<br>
<table class="table table-dark">
  <thead>
    <tr>
      <th>Producto</th>
      <th>Cantidad</th>
      <th>Precio</th>
      <th>Importe</th>
    </tr>
  </thead>
  <tbody>
    <% @sale.sale_details.each do |detalle| %>
      <tr>
        <td><%= detalle.product.name %></td>
        <td><%= detalle.quantity %></td>
        <td><%= detalle.price_at_sale %></td>
        <td><%= detalle.price_at_sale * detalle.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>
