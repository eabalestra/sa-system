<!-- Modal -->
<div class="modal fade" id="saleSearchModal" tabindex="-1" role="dialog" aria-labelledby="saleSearchModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="saleSearchModalLabel">Buscar venta por su código de identificación (ID): </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_with url: sales_path, method: :get, local: true do |form| %>
          <div class="form-group">
            <%= form.label :id, 'ID de venta:' %>
            <%= form.text_field :id, class: 'form-control' %>
          </div>
          <%= form.submit 'Buscar', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
